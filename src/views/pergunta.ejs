<%- include ('./partials/header.ejs') %>

<body>
    <%- include ('./partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.title %></h1>
        <p><%= pergunta.description %></p>
        <hr>
        <form action="/responder/<%= pergunta.id %>" method="POST">
            <h3>Responda</h3>
            <label for="">Resposta</label>
            <textarea name="corpo" id=""  class="form-control" placeholder="Digite sua reposta"></textarea>
            <br>
            <button class="btn btn-primary">Resposnder</button>
        </form>
        <% resp.forEach(resp =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%=resp.corpo%></p>
                </div>
            </div>
            
        <% }) %>
    </div>
</body>
