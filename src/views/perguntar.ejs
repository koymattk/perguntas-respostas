<body>
    <nav class="navbar navbar-light bg-primary">
        <a class="navbar-brand" href="/">
            <h1 style="font-size: 20px;" >Perguntas e Respostas !</h1>
        </a>
    </nav>
    <div class="container" id="formulario-pergunta">
        <div class="card">
            <div class="card-header">
                <h3>Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form action="" >
                    <label for="">Titulo</label>
                    <input class="form-control" type="text" placeholder="Titulo" >
                    <label for="">Descrição</label>
                    <textarea class="form-control" name="" id="" cols="30" rows="10" placeholder="Descreva sua pergunta"></textarea>
                    <button class="btn btn-primary">Perguntar</button>
                </form>
            </div>
        </div>        
    </div>
